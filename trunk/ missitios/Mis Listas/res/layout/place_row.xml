<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="5px" android:paddingBottom="5px">

    <ImageView
        android:id="@+id/icon"
        android:paddingRight="10px"
        android:paddingLeft="8px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			
			<TextView android:id="@+id/name" xmlns:android="http://schemas.android.com/apk/res/android"
			    android:textSize="15px"
				android:textStyle="bold"
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:textColor="#ffffff"/>
			    
			<TextView android:id="@+id/date"
			    android:textSize="11px"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:text="hoy"
			    android:layout_marginLeft="10px"
			    android:layout_marginRight="7px"
			    android:textColor="#ffffff" />
			    
		</LinearLayout>
		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
	
		<TextView android:id="@+id/description" xmlns:android="http://schemas.android.com/apk/res/android"
				android:paddingLeft="0px"
				android:textSize="11px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
		</LinearLayout>
		    
		<LinearLayout android:orientation="horizontal"
			android:paddingTop="5px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/address" xmlns:android="http://schemas.android.com/apk/res/android"
				android:textSize="11px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
		    
			<RatingBar android:id="@+id/ratingBarPlace" xmlns:android="http://schemas.android.com/apk/res/android"   
				android:paddingLeft="10px"
				android:stepSize="0.5"
				style="?android:attr/ratingBarStyleSmall"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content" />
			
			<TextView android:id="@+id/puntuation" xmlns:android="http://schemas.android.com/apk/res/android"
				android:paddingLeft="10px"
				android:textSize="11px"
				android:textStyle="italic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:textColor="#eeeeee"/>
			
			    
		</LinearLayout>  
		
				    
	</LinearLayout>    
    
</LinearLayout>