<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5px"
    android:background="#000000"
    >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:padding="3px" android:id="@+id/ll_menu" 
	    android:background="@drawable/bg_corner"
	    android:layout_width="fill_parent" android:layout_marginBottom="5px" android:orientation="horizontal" android:layout_gravity="center_horizontal" android:layout_height="50px">
		
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ico_1_on" android:layout_weight="1" android:id="@+id/group1"></ImageView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/group2" android:src="@drawable/ico_2_off"></ImageView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/group3" android:src="@drawable/ico_3_off"></ImageView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/group4" android:src="@drawable/ico_4_off"></ImageView>
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/group5" android:src="@drawable/ico_5_off"></ImageView>
	
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:padding="3px" android:id="@+id/ll_info" 
	    android:background="@drawable/bg_corner"
	    android:layout_width="fill_parent" android:layout_marginBottom="5px" 
	    android:orientation="horizontal" 
	    android:layout_gravity="center_horizontal" 
	    android:layout_height="50px" 
	    android:clickable="true">
		
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ico_1_on" android:paddingRight="10px" android:id="@+id/ico_info"></ImageView>
		<TextView android:layout_width="wrap_content" 
		android:id="@+id/txt_info" 
		android:text="informacion" 
		android:textColor="#000000" 
		android:layout_marginRight="5px" 
		android:layout_weight="1" 
		android:layout_height="45px"></TextView>
	
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_more" android:src="@drawable/ico_more"></ImageView>
</LinearLayout>
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:padding="3px"
	    android:background="@drawable/bg_corner"
	    android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginBottom="5px">
		<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
				android:id="@+id/map_container" 
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent">
		</FrameLayout>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:padding="3px"
	    android:background="@drawable/bg_corner"
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent" 
	    android:layout_marginBottom="5px" 
	    android:orientation="horizontal" 
	    android:layout_gravity="center_horizontal" 
	    android:id="@+id/ll_buttons_new_point" android:visibility="gone">

		<TextView android:layout_width="wrap_content" android:id="@+id/btn_accept_new_point" android:text="@string/save" android:gravity="center" android:layout_height="fill_parent" android:layout_marginRight="5px" android:layout_weight="1" android:padding="5px" android:background="@drawable/bg_button" android:textColor="#ffffff" android:layout_margin="5px"></TextView>
		<TextView android:layout_width="wrap_content" android:id="@+id/btn_cancel_new_point" android:text="@string/cancel" android:gravity="center" android:layout_height="fill_parent" android:layout_marginLeft="5px" android:layout_weight="1" android:padding="5px" android:background="@drawable/bg_button" android:textColor="#ffffff" android:layout_margin="5px"></TextView>
	</LinearLayout>
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:padding="3px"
	    android:background="@drawable/bg_corner"
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent" 
	    android:layout_marginBottom="5px" 
	    android:orientation="horizontal" 
	    android:id="@+id/ll_pagination" 
	    android:layout_gravity="center_horizontal">

		<TextView android:layout_width="wrap_content" android:id="@+id/txt_found" android:text="97 encontrados" android:textColor="#000000" android:gravity="center" android:layout_height="fill_parent" android:layout_marginRight="5px" android:layout_weight="1"></TextView>
		<ImageView android:id="@+id/img_page_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_left"></ImageView>
		<TextView android:layout_width="wrap_content" android:id="@+id/txt_page" android:text="PÃ¡gina 1/7" android:textColor="#000000" android:gravity="center" android:layout_height="fill_parent" android:layout_marginRight="5px" android:layout_marginLeft="5px"></TextView>
		<ImageView android:id="@+id/img_page_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right"></ImageView>
	</LinearLayout>
	
</LinearLayout>
